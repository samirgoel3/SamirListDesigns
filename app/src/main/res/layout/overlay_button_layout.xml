<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:orientation="vertical"
        android:gravity="center|right|bottom"
        android:paddingRight="10dp"
        android:paddingBottom="15dp">




        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="23"
                android:padding="5dp"
                android:background="@drawable/circle_background"
                android:id="@+id/product_price_in_item_for_fragment_list"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                />

        </FrameLayout>



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/minus_button_states"
        android:id="@+id/minus_button_in_item_for_list_fragment"/>


    <TextView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="32"
        android:background="@drawable/circle_for_no_of_unit"
        android:id="@+id/no_of_unit_in_item_for_fragment_list"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginRight="10dp"
        android:layout_gravity="center|right"/>
    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/plus_button_states"
        android:id="@+id/plus_button_in_item_for_list_fragment"/>

</LinearLayout>




    </LinearLayout>

</LinearLayout>